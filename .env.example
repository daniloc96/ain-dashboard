# ===========================================
# AIN Dashboard - Environment Configuration
# ===========================================

# Demo Mode (for screenshots with mock data)
# Set to "true" to use fake data instead of real API calls
DEMO_MODE=false

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8002

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/dashboard_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=dashboard_db

# GitHub Integration
# Generate at: https://github.com/settings/tokens
# Required scope: repo
# IMPORTANT: Authorize SSO for organization access!
GITHUB_TOKEN=

# Jira Integration
# Generate at: https://id.atlassian.com/manage-profile/security/api-tokens
# Supports multiple domains (comma-separated)
JIRA_DOMAINS=yourcompany.atlassian.net
JIRA_EMAIL=your.email@company.com
JIRA_API_TOKEN=
NEXT_PUBLIC_JIRA_LINKS='[{"name":"Board Name","url":"https://your-domain.atlassian.net/jira/software/projects/PROJ/boards/1"}]'

# Jira Task Filter
# Case-sensitive, matches Jira status names
JIRA_TASK_STATUS_ENABLED="In Progress,To Do,Blocked,Waiting"

# Optional: only show tasks from these project keys (e.g. ECAP). Leave empty for all projects.
# JIRA_PROJECT_KEYS=ECAP
